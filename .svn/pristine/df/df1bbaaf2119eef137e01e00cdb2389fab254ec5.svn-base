<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="流转卡号:" />

                <TextView
                    android:id="@+id/tv_lzkkh"
                    style="@style/item_text_content" />

            </RelativeLayout>

            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="接单工序:" />

                <TextView
                    android:id="@+id/tv_jdgx"
                    style="@style/item_text_content" />

            </RelativeLayout>

            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="接单数量:" />

                <EditText
                    android:id="@+id/et_jdsl"
                    style="@style/item_text_content"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:inputType="number" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="19dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="110dp"
                    android:layout_height="34dp"
                    android:background="@drawable/shape_rectangular_agv_btn_ok"
                    android:text="接单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_15sp" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="110dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/shape_rectangular_agv_btn_bg"
                    android:text="取消"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_15sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>